{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "functions": {
    "api/chat.js": {
      "maxDuration": 30
    },
    "api/generate-plan-with-sources.js": {
      "maxDuration": 30
    },
    "api/upload-file.js": {
      "maxDuration": 30
    },
    "api/scrape-url.js": {
      "maxDuration": 30
    },
    "api/create-checkout-session.js": {
      "maxDuration": 10
    },
    "api/messages/**/*.js": {
      "maxDuration": 10
    },
    "api/generated-content.js": {
      "maxDuration": 10
    },
    "api/generated-content/**/*.js": {
      "maxDuration": 10
    },
    "api/study-plan.js": {
      "maxDuration": 10
    },
    "api/study-plan/**/*.js": {
      "maxDuration": 10
    },
    "api/study-plans/**/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

